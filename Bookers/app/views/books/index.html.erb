 <%= render 'books/list', book: @book, user: @user %>
   
 <div class="notice"><%= notice%></div>

  <div class="col-lg-9">
   <h1>Books</h1>
     <table class="table table-hover">
  <thead>
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion
    </th>
   </tr>
  </thead>

  <tbody>
     <% @books.each do |book|%>
    <tr>
       <%= link_to book_path(book.id) do %>
     <td>
       <%= attachment_image_tag @user,:profile_image_id,:fill,60,60,format: 'jpeg',fallback: "no_image.jpg", size: '60x60'%>
     </td>
     <td>
  　   <%= book.title %>
     </td>
     <td>
  　   <%= book.body %>
  　  </td>
    　<% end %>
    </tr>
  　   <% end %>
    </tbody> 
  </table>
  </div>
 </div>
</div>