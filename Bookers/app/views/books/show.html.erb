
 
<%= render 'books/list', book: @book, user: @user %>
 <div class="container">
  <div class="row">
     <div class="col-xs-9">
<h2>Book detail</h2>

<table class="table table-hover">
 <tbody>
    <tr>
     <td>
      <%= attachment_image_tag @user,:profile_image,format: 'jpeg',fallback: "no_image.jpg", size: '60x60'%>
      <div><%= link_to @user.name ,user_path(@user.id) %></div>
     </td>
     <td>
  　  <%=@book_show.title %>
     </td>
     <td>
  　   <%=@book_show.body %>
     </td>
     <%if @book_show.user == current_user %>
     <td>
      <%= link_to 'Edit',edit_book_path(@book_show.id), class: "btn btn-success" %>
      <%= link_to 'Destroy',book_path(@book_show.id),method: :delete,"data-confirm" =>"本当に消しますか?" ,class:"btn btn-danger"%>
      </td>
    </tr>
  　 <% end %>
  </tbody> 
</table>
 </div>
 </div>
</div>
 