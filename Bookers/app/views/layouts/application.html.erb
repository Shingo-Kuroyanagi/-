<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head> 

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <nav class="navbar navbar-nav navbar-left">
        <div class="container">
            <font size="5" color="white">Bookers</font>
          </nav>
          <nav>
           <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
	      	  	<font color="#9d9d9d">
	      	  	<% if user_signed_in? %>
	      	  	 <span class="glyphicon glyphicon-home">
                 <%= link_to 'Home',user_path(current_user.id)%>
                </span>
                 <span class="glyphicon glyphicon-user ">
                 <%= link_to 'Users', users_path%>
                </span>
                  <span class="glyphicon glyphicon-book" >
                 <%= link_to "Books",books_path%>
                </span>
                  <span class="glyphicon glyphicon-log-out" >
                 <%= link_to "logout", destroy_user_session_path, method: :delete  %>
                </span>
              <% else %>
                 <span class="glyphicon glyphicon-home" >
                  <%= link_to 'Home', "/" %>
                </span>
                <span class="glyphicon glyphicon-link" >
                  <%= link_to 'About', home_about_path %>
                </span>
                <span class="glyphicon glyphicon-edit">
                  <%= link_to 'sign up', new_user_registration_path %>
                </span>
                <span class="glyphicon glyphicon-log-in" >
                  <%= link_to 'login', new_user_session_path %>
                </span>
                <% end %>
                </font>
            </ul>
           </nav>      
          </div>
        </div>
      </nav>
    </header>
    <main>
    <div class="container"> 
    <%= yield %>
    </div>
    </main>  
   
   <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
    
  </body>
</html>
